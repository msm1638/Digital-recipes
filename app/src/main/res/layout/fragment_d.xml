<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FragmentD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/border_custom"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:background="@drawable/border_all">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_res1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="예약 날짜"
                android:textColor="#000000"
                app:backgroundTint="#00FFFFFF"
                app:strokeColor="#00000000"
                app:strokeWidth="1dp"
                android:stateListAnimator="@null"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_res2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="예약 시간"
                android:textColor="#000000"
                app:backgroundTint="#00FFFFFF"
                app:strokeColor="#00000000"
                app:strokeWidth="1dp"
                android:stateListAnimator="@null"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="원장 성민"
                    android:textColor="#5E73E8"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[커트 / 염색 / 매직 / 탈색 전문] 맞춤형 디자인 시술, 고객님만의
숨겨진 매력을 찾아드리겠습니다."
                    android:textColor="#000000"
                    android:textSize="13dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약"
                    android:textColor="#000000"
                    app:backgroundTint="#00FFFFFF"
                    app:strokeColor="#D7D7D7"
                    app:strokeWidth="1dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:stateListAnimator="@null"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@mipmap/sungminimage5"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginStart="15dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/border_bottom"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="디자이너 짱구"
                    android:textColor="#5E73E8"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요 디자이너 짱구입니다. 믿고 맡겨만 주세요!"
                    android:textColor="#000000"
                    android:textSize="13dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약"
                    android:textColor="#000000"
                    app:backgroundTint="#00FFFFFF"
                    app:strokeColor="#D7D7D7"
                    app:strokeWidth="1dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:stateListAnimator="@null"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:srcCompat="@mipmap/sungminimage6"
                android:layout_marginStart="15dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/border_bottom"></LinearLayout>
    </LinearLayout>


</LinearLayout>