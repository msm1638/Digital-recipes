<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentReservation4"
    android:background="#FFFFFF"
    android:clickable="true">

    <com.example.project_test3.NewScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/textRes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="원장 성민"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/sungminimage5"
                    android:tintMode="src_atop"

                    app:tint="#56000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_bottom2">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="시술메뉴"
                            android:textColor="#000000"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="end"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="원"
                            android:textColor="#000000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_weight="8"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="현장에서 결제할 금액"
                            android:textColor="#000000"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:layout_weight="4"
                            android:gravity="end"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="원"
                            android:textColor="#000000"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_custom" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:text="예약자 정보"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="예약자"
                                android:textColor="#000000"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/EditText1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:background="@drawable/border_all"
                                android:hint="(필수) 예약자를 입력하세요."
                                android:inputType="textPersonName"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="13dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="연락처"
                                android:textColor="#000000"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/EditText2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:background="@drawable/border_all"
                                android:hint="(필수) 연락처를 입력하세요."
                                android:inputType="phone"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="13dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="이메일"
                                android:textColor="#000000"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/EditText3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:background="@drawable/border_all"
                                android:hint="이메일을 입력하세요."
                                android:inputType="textEmailAddress"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="13dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="요청사항"
                                android:textColor="#000000"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/EditText4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:background="@drawable/border_all"
                                android:hint="업체에 요청하실 내용을 적어주세요."
                                android:inputType="textLongMessage"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="13dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_buttonView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_custom2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="5"
                        android:enabled="false"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:stateListAnimator="@null"
                        android:text="다음단계"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        app:backgroundTint="#BCBCBC"
                        app:strokeColor="#D7D7D7"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:stateListAnimator="@null"
                        android:text="문의"
                        android:textColor="#000000"
                        app:backgroundTint="#00FFFFFF"
                        app:strokeColor="#D7D7D7"
                        app:strokeWidth="1dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.example.project_test3.NewScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>